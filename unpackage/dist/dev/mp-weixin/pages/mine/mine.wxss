.mine {
  width: 750rpx;
}
.mine .mine-top {
  width: 100%;
  height: 200rpx;
  background: #A2B1B8;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1em;
}
.mine .mine-top .bfq {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 1em;
}
.mine .mine-top .bfq image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.mine .mine-top .bfq text {
  font-size: 0.9rem;
  color: rgba(0, 0, 0, 0.6);
  margin-left: 1em ;
}
.mine .mine-top .jt {
  width: 50rpx;
  height: 30rpx;
  margin-right: 1em;
}
.mine .but {
  width: 90%;
  margin: auto;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
  height: 350rpx;
  border-radius: 10rpx;
  background: #FFFFFF;
}
.mine .but .hx {
  width: 90%;
  height: 0.1rpx;
  background: rgba(0, 0, 0, 0.1);
  margin: auto;
}
.mine .but .top {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
}
.mine .but .top view {
  margin-top: 0.4rem;
}
.mine .but .top .top-left {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 1em;
}
.mine .but .top .top-left image {
  width: 35rpx;
  height: 35rpx;
}
.mine .but .top .top-left text {
  margin-left: 0.4rem;
  font-size: 0.8rem;
  color: #A2B1B8;
}
.mine .but .top .top-right {
  background: #A2B1B8;
  color: white;
  padding: 4rpx 20rpx;
  border-radius: 10rpx;
  font-size: 0.7rem;
  margin-right: 1em;
}
.mine .but .buttom {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.mine .but .buttom .buttom-top {
  font-size: 1em;
  color: #888888;
  margin-left: 0.5rem;
  margin-top: 0.5rem;
  font-weight: 600;
}
.mine .but .buttom .buttom-bottom {
  width: 90%;
  flex: 1;
  margin: 1em auto;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  gap: 10rpx;
  position: relative;
}
.mine .but .buttom .buttom-bottom button {
  width: 120%;
  height: 100%;
  border: none;
  background: none;
  outline: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.mine .but .buttom .buttom-bottom button image {
  width: 55rpx;
  height: 55rpx;
  margin-top: 1em;
}
.mine .but .buttom .buttom-bottom button text {
  margin-top: 0.5rem;
  font-size: 0.7rem;
  color: #5C5C5C;
  margin-bottom: 0.5em;
}

